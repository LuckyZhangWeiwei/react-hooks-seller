@import './../../assert/stylus/cube/variable.styl'
@import './../../assert/stylus/variable.styl'
@import './../../assert/stylus/mixin.styl'
.header-detail
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  overflow auto
  background-filter blur(10px)
  // opacity 1
  opacity 0
  color: $color-white
  background: $color-background-s
  .detail-close
    position: absolute
    bottom: 0
    left: 50%
    transform: translateX(-15px)
    width: 30px
    height: 30px
    clear: both
    font-size: $fontsize-large-xxxx
    margin-bottom: 10px
&.fade-enter
  opacity: 0
  background: $color-background
&.fade-enter-active
  transition: all 0.3s
  opacity: 1
&.fade-enter-done
  opacity: 1